---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import HeroSection from '../../components/HeroSection.astro';
import { getCollection } from 'astro:content';

// Ambil semua artikel
const posts = await getCollection('blog');

// Urutkan terbaru -> terlama (aman walau date missing)
posts.sort((a, b) => new Date(b.data.date || 0) - new Date(a.data.date || 0));

// Render isi MD (opsional, kita pakai untuk fallback excerpt)
const postsWithHtml = await Promise.all(
  posts.map(async (p) => {
    const rendered = await p.render();
    return { ...p, html: rendered.html };
  })
);

// Buat daftar kategori yang pasti string
const categories = [
  ...new Set(
    postsWithHtml.map((p) => {
      // pastikan ambil string, kalau null/undefined -> 'Uncategorized'
      const c = p?.data?.category;
      return typeof c === 'string' && c.trim() ? c.trim() : 'Uncategorized';
    })
  )
];

// Helper: slugify aman (menghindari crash kalau input undefined)
const slugify = (s) => String(s ?? 'Uncategorized').trim().toLowerCase().replace(/\s+/g, '-');

// Helper tanggal & HTML strip
const formatDate = (d) =>
  d ? new Date(d).toLocaleDateString('id-ID', { day: 'numeric', month: 'long', year: 'numeric' }) : '';
const stripHtml = (html) => (html ? html.replace(/<[^>]+>/g, '') : '');
---
<Layout title="Blog - SaaSify" description="Latest product updates, feature releases, and company news from SaaSify.">
  <Header />
  <main>
    <HeroSection 
      title="Latest Updates & News" 
      highlightText="Updates"
      description="Stay up to date with our latest product updates, feature releases, and company news."
    />
    
    <!-- Category Filter -->
    <div class="container-custom py-8">
      <div class="flex flex-wrap gap-4 justify-center mb-12">
        <a href="#" class="px-4 py-2 rounded-full bg-primary-600 text-white font-medium text-sm hover:bg-primary-700 transition-colors">
          All Posts
        </a>

        <!-- {categories.map((category) => {
          // selalu aman — category sudah string dari atas
          const cat = category ?? 'Uncategorized';
          return (
            <a
              href={'#' + slugify(cat)}
              class="px-4 py-2 rounded-full bg-gray-100 dark:bg-gray-800 text-gray-700 dark:text-gray-300 font-medium text-sm hover:bg-gray-200 dark:hover:bg-gray-700 transition-colors"
            >
              {cat}
            </a>
          );
        })} -->
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        {postsWithHtml.map((post, index) => {
          const data = post.data ?? {};
          const image = data.image ?? '/images/default.jpg';
          const title = data.title ?? 'Untitled';
          const date = formatDate(data.date);
          const description = data.description ?? stripHtml(post.html).slice(0, 160) + '...';
          const author = data.author ?? '@stifinmuslimah';
          const authorRole = data.authorRole ?? 'Author';
          const authorAvatar = data.authorAvatar ?? 'src/assets/stifin.svg';
          return (
            <div class="card border border-gray-200 dark:border-gray-700 overflow-hidden slide-up" style={'animation-delay: ' + (index * 100) + 'ms'}>
              <a href={'/blog/' + post.slug} class="block">
                <img 
                  src={image}
                  alt={title}
                  class="w-full h-48 object-cover"
                  loading="lazy"
                />
              </a>
              <div class="p-6">
                <div class="flex items-center mb-4">
                  <span class="text-sm font-medium text-primary-600 dark:text-primary-400">{data.category ?? 'Uncategorized'}</span>
                  <span class="mx-2 text-gray-300 dark:text-gray-600">•</span>
                  <span class="text-sm text-gray-500 dark:text-gray-400">{date}</span>
                </div>
                <a href={'/blog/' + post.slug} class="block mb-3">
                  <h2 class="text-xl font-semibold text-gray-900 dark:text-white hover:text-primary-600 dark:hover:text-primary-400 transition-colors">{title}</h2>
                </a>
                <p class="text-gray-600 dark:text-gray-300 mb-6">
                  {description}
                </p>
                <div class="flex items-center">
                  <img 
                    src={authorAvatar} 
                    alt={author} 
                    class="w-10 h-10 rounded-full mr-3 object-cover"
                    loading="lazy"
                  />
                  <div>
                    <p class="font-medium text-gray-900 dark:text-white">{author}</p>
                    <p class="text-sm text-gray-500 dark:text-gray-400">{authorRole}</p>
                  </div>
                </div>
              </div>
            </div>
          );
        })}
      </div>

      <div class="mt-12 flex justify-center">
        <a href="#" class="btn-outline">
          Load More Articles
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-2" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10 3a1 1 0 011 1v10.586l3.293-3.293a1 1 0 011.414 1.414l-5 5a1 1 0 01-1.414 0l-5-5a1 1 0 111.414-1.414L9 14.586V4a1 1 0 011-1z" clip-rule="evenodd" />
          </svg>
        </a>
      </div>
    </div>
  </main>
  <Footer />
</Layout>
